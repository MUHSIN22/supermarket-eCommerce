<section class="home-main-container">
    <div class="offer">
        <div class="carousel-container">
            <img class="carousel-images fade" src="/images/carousel/carousel1.jpg" alt="" />
            <img class="carousel-images fade" src="/images/carousel/carousel2.jpg" alt="">
            <img class="carousel-images fade" src="/images/carousel/carousel3.jpg" alt="">
            <div class="right-arrow" onclick="slideChange(1)">
                <i class="fas fa-chevron-right"></i>
            </div>
            <div class="left-arrow" onclick="slideChange(-1)">
                <i class="fas fa-chevron-left"></i>
            </div>
        </div>
        <div class="other-two">
            <img src="/images/other-offers/offer1.jpg" alt="" />
            <img src="/images/other-offers/offer2.jpg" alt="" />
        </div>
    </div>

    <!-- Categories container -->

    <section class="categories">
        <div class="categories-heading">
            <h1>Categories</h1>
        </div>
        <div class="categories-layout">
            <div class="categories-card cooking-essential">
                <a href="/products?category=Cooking essential"><button>Cooking Essential</button></a>
            </div>
            <div class="categories-card gourmet-food">
                <a href="/products?category=Gourmet Foods"><button>Gourmet Food</button></a>
            </div>
            <div class="categories-card household-supplies">
                <a href="/products?category=Household Supplies"><button>Household Supplies</button></a>
            </div>
            <div class="categories-card family-nutrition">
                <a href="/products?category=Family Nutrition"><button>Family Nutrition</button></a>
            </div>
            <div class="categories-card baby">
                <a href="/products?category=Baby products"><button>Baby</button></a>
            </div>
            <div class="categories-card beauty">
                <a href="/products?category=Beauty"><button>Beauty</button></a>
            </div>
            <div class="categories-card ice-creams">
                <a href="/products?category=Ice creams"><button>Ice Creams</button></a>
            </div>
            <div class="categories-card nuts">
                <a href="/products?category=Nuts"><button>Nuts</button></a>
            </div>
            <div class="categories-card rice">
                <a href="/products?category=Rice"><button>Rice</button></a>
            </div>
            <div class="categories-card sweets">
                <a href="/products?category=Sweets and Candies"><button>Sweets</button></a>
            </div>
        </div>
    </section>

    <!-- Special offers container -->


    <section class="special-offers-container">
        <div class="special-offers-heading">
            <h1>Products For You</h1>
        </div>
        <div class="special-offers">
            {{#each products}}
            <div class="product-card">
                    <a href="/product-details/{{this._id}}" style="text-decoration: none;color: var(--dark);" class="image">
                        <img src="/images/product-images/{{this.images.[1]}}" alt="">
                    </a>
                    <a href="/product-details/{{this._id}}" style="text-decoration: none;color: var(--dark);padding: .2rem;">
                        <div class="">
                            {{this.prouductName}}
                        </div>
                        <div class="price margin-top margin-bottom">
                            <strong>{{this.productPrice}}</strong>
                        </div>
                    </a>
                    <div class="card-body margin-bottom">
                        <div class="wishlist-and-add margin-top">
                            {{#if this.wishlist.[0]}}
                            <i class="far fa-heart heart fas" id="{{this._id}}"></i>
                            {{else}}
                            <i class="far fa-heart heart" id="{{this._id}}"></i>
                            {{/if}}
                            <a href="#"><button>Add to cart</button></a>
                        </div>
                    </div>
                
            </div>
            {{/each}}
        </div>
    </section>
</section>
</main>
