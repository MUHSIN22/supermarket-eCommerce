<section class="add-product-page">
    <form class="add-product-page-container" enctype="multipart/form-data">
        <div class="upload-product-heading">
            <h1>Upload Products</h1>
        </div>
        <div class="product-name-and-category">
            <label for="prouduct-name">Name</label>
            <input type="text" name="prouduct-name" id="prouduct-name" class="prouduct-name" />
            <div class="category-and-stock">
                <button class="product-category" id="product-category">Select a Category<i class="fas fa-sort-down"></i></button>
                <div class="stock">
                    <label for="available-stock">Available Stock</label>
                    <input type="text" name="available-stock" class="available-stock" id="available-stock" />
                </div>
            </div>
            <input type="text" class="category-save" name="category" hidden>
            <ul class="category-list" id="category-list">
                <li value="Cooking essential">Cooking essential</li>
                <li value="Gourmet Foods">Gourmet Foods</li>
                <li value="Household Supplies">Household Supplies</li>
