                <li value="Nuts">Nuts</li>
                <li value="Rice">Rice</li>
                <li value="Sweets and Candies">Sweets and Candies</li>
            </ul>
        </div>
        <div class="radio-labels">
            <input type="radio" name="pricing" class="pricing" id="default-pricing" value="default-pricing" />
            <h6>Default Pricing</h6>
            <input type="radio" name="pricing" class="pricing" id="custom-pricing" value="Customize Pricing">
            <h6>Customize Pricing</h6>
        </div>
        <div class="product-price-container">
                <input type="text" placeholder="Enter price" name="product-price" id="product-price"
                class="product-price" />
            <div class="radio-labels">
                <input type="radio" name="measure" value="/piece" id="measure" />
                <h6>/piece</h6>
                <input type="radio" name="measure" value="/kg" id="measure" />
                <h6>/kg</h6>
                <input type="radio" name="measure" value="/litre" id="measure" />
                <h6>/litre</h6>
                <input type="radio" name="measure" value="/ml" id="measure" />
                <h6>/ml</h6>
                <input type="radio" name="measure" value="/combo" id="measure" />
                <h6>/combo</h6>
            </div>
        </div>
        <div class="product-custom-prize-container">
            <div class="custom-price-div">
                <input type="text" placeholder="Enter Price" class="product-custom-price">
                <h6>for</h6>
                <input type="text" placeholder="Enter Quantity" class="custom-measure">
                <select name="custom-measure-unit" id="custom-measure-unit">
                    <option value="piece">piece</option>
