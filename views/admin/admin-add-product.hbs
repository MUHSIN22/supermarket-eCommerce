                <h6>for</h6>
                <input type="text" placeholder="Enter Quantity" class="custom-measure">
                <select name="custom-measure-unit" id="custom-measure-unit">
                    <option value="piece">piece</option>
                    <option value="kg">Kg</option>
                    <option value="litre">litre</option>
                    <option value="ml">ml</option>
                </select>
            </div>
            <div>
                <input type="text" placeholder="Enter Price" class="product-custom-price">
                <h6>for</h6>
                <input type="text" placeholder="Enter Quantity" class="custom-measure">
                <select name="custom-measure-unit" id="custom-measure-unit">
                    <option value="piece">piece</option>
                    <option value="kg">Kg</option>
                    <option value="litre">litre</option>
                    <option value="ml">ml</option>
                </select>
            </div>
